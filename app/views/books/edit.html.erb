<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>Editing Book</h2>
<%= form_with model:@user, local:true do |f| %>
    <div class="form-group">
    <label for="inputImage">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"Title", class:"form-control"%>
    </div>

  <div class="form-group">
  <label for="inputImage">Opinion</label>
  <%= f.text_area :body, autofocus: true, id:"inputName", placeholder:"Opinion", class: "form-control"%>
  </div>

  <%= f.submit "Update Book", class: "btn btn-success"%>
<% end %>
    </div>
  </div>
</div>