<div class='container px-5 px-sm-0'>
  <div class='row'>
<%= render 'users/list', book: @book_new,  user: @user %>

 <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
             <%= link_to  user_path(@book.user) do%>
             <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><br>
             <%= @user.name %>
             <% end %>
          </td>

          <td>
            <%= link_to  book_path(@book) do%>
            <%= @book.title %>
            <% end %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td><a href="/books/"></a></td>

          <% if current_user == @book.user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: " btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger destroy_book", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </table>
  </div>
</div>